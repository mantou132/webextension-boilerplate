{
  "name": "webextension-boilerplate",
  "version": "0.0.1",
  "description": "webextension boilerplate",
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .ts --fix src/",
    "start": "web-ext --config web-ext.config.js run",
    "build": "webpack --mode=development",
    "build:xpi": "npm run build && web-ext --config web-ext.config.js sign",
    "build:zip": "npm run build && web-ext --config web-ext.config.js build",
    "watch": "npm run build -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantou132/webextension-boilerplate.git"
  },
  "keywords": [
    "webextension",
    "typescript"
  ],
  "author": "mantou132",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mantou132/webextension-boilerplate/issues"
  },
  "homepage": "https://github.com/mantou132/webextension-boilerplate#readme",
  "dependencies": {
    "webextension-polyfill-ts": "^0.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "file-loader": "^4.2.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "prettier": "^1.18.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.2",
    "url-loader": "^2.1.0",
    "web-ext": "^3.1.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
